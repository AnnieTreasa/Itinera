    <script>
        document.getElementById("getItineraryButton").addEventListener("click", async function() {
            const destinationCountry = document.getElementById("destinationCountry").value;
            const budget = document.getElementById("budget").value;
            const travelStyle = document.getElementById("travelStyle").value;
            
            // Check if elements exist before accessing values
  if (!destinationCountry || !budget || !travelStyle) {
    console.error("Input elements not found. Please check your HTML IDs.");
    return; // Prevent further execution if elements are missing
  }
            
            // Get other input values similarly

            const API_KEY = "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";

            const APIBody = {
                "model": "gpt-3.5-turbo-0125",
                "messages": [
                    {
                        "role": "system",
                        "content": `Generate a personalized travel itinerary for a trip to ${destinationCountry} with a budget of ${budget} along with timestamps. The traveler is interested in a ${travelStyle} vacation and enjoys ...`
                    }
                ],
                "temperature": 0.7,
                "max_tokens": 500,
                "top_p": 1
            };

            const response = await fetch("https://api.openai.com/v1/chat/completions", {
